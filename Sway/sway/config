### Input configuration {{{
#sway-only(
bindsym $mod+Control+i exec rofi-sway-inputs

input * {
    accel_profile flat
}

input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_file ~/.config/sway/input/default-thinkpad.xkb
}

input "2:14:ETPS/2_Elantech_Touchpad" {
    tap enabled
    natural_scroll enabled
}
#)
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.
# }}}

### Key bindings {{{

## Sway stuff {{{
floating_modifier $mod

# Lock screen and power menu
#i3-change-next-to: bindsym $mod+Escape exec lock
bindsym $mod+Escape exec wlock

# Toggle waybar and gaps
#i3-change-next-to: bindsym $mod+o exec polybar-msg cmd toggle
bindsym $mod+o exec "killall -SIGUSR1 waybar"
bindsym $mod+Control+g gaps inner current toggle $gaps_inner; \
                       gaps outer current toggle $gaps_outer

# Toggle sticky
bindsym $mod+Control+s sticky toggle

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Reload configuration file
#i3-skip-next:
bindsym $mod+Control+r reload
#i3: bindsym $mod+Control+r \
#i3:     exec --no-startup-id ~/.local/share/scripts/i3-config-from-sway.sh $I3CONFIG; \
#i3:     restart

# Close focused client
bindsym $mod+q kill
# }}}

## Launcher {{{
bindcode $mod+61 exec --no-startup-id $menu

# Open terminal
bindsym $mod+t exec $term
# bindsym $mod+Control+t exec $term_var
bindsym $mod+Control+t exec $term_var

# Open documents
bindsym $mod+d exec rofi-open

# Browser
bindsym $mod+b         exec $browser
bindsym $mod+Control+b exec --no-startup-id rofi-ff

# Open emoji selector
bindsym $mod+Control+e exec rofi-emoji

# Open script selector
bindsym $mod+x exec rofi-scripts
## }}}

## Media keys {{{
# Brightness keys
#i3-change-next-to: bindsym \
bindsym --locked \
    XF86MonBrightnessDown exec --no-startup-id backlight decrease
#i3-change-next-to: bindsym \
bindsym --locked \
    XF86MonBrightnessUp   exec --no-startup-id backlight increase

# Toggle keyboard and screen backlight
#i3-change-next-to: bindsym \
bindsym --locked \
    Mod4+Home exec --no-startup-id kbbacklight_toggle
#sway-only(
bindsym --locked \
    Mod4+End  exec --no-startup-id backlight toggle
#)
#i3: bindsym \
#i3:    Mod4+End  exec --no-startup-id "sleep 0.5; xset dpms force off"

# Raise, lower and mute audio
#i3-change-next-to: bindsym \
bindsym --locked \
    XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
#i3-change-next-to: bindsym \
bindsym --locked \
    XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
#i3-change-next-to: bindsym \
bindsym --locked \
    XF86AudioMute        exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
#i3-change-next-to: bindsym \
bindsym --locked \
    XF86AudioMicMute     exec --no-startup-id pactl set-source-mute 0 toggle

# Mod + audio keys as player control
#i3-change-next-to: bindsym \
bindsym --locked \
    $mod+XF86AudioMute        exec --no-startup-id playerctl play-pause
#i3-change-next-to: bindsym \
bindsym --locked \
    $mod+XF86AudioLowerVolume exec --no-startup-id playerctl previous
#i3-change-next-to: bindsym \
bindsym --locked \
    $mod+XF86AudioRaiseVolume exec --no-startup-id playerctl next
#i3-change-next-to: bindsym \
bindsym --locked \
    $mod+XF86AudioMicMute     exec --no-startup-id playerctl stop

# Bind player keys (used e.g. by bluetooth headset)
#i3-change-next-to: bindsym \
bindsym --locked \
    XF86AudioPlay  exec --no-startup-id playerctl play
#i3-change-next-to: bindsym \
bindsym --locked \
    XF86AudioPause exec --no-startup-id playerctl pause
#i3-change-next-to: bindsym \
bindsym --locked \
    XF86AudioNext  exec --no-startup-id playerctl next
#i3-change-next-to: bindsym \
bindsym --locked \
    XF86AudioPrev  exec --no-startup-id playerctl previous
# }}}

## Navigation {{{

# Move to and show scratchpad 
bindsym $mod+Control+minus move scratchpad
bindsym $mod+minus scratchpad show

# Toggle floating status of current client
bindsym $mod+Control+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

# Move the focus
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right
bindsym $mod+Left   focus left
bindsym $mod+Down   focus down
bindsym $mod+Up     focus up
bindsym $mod+Right  focus right

# Move the focused client
bindsym $mod+Control+$left  move left
bindsym $mod+Control+$down  move down
bindsym $mod+Control+$up    move up
bindsym $mod+Control+$right move right
bindsym $mod+Control+Left   move left
bindsym $mod+Control+Down   move down
bindsym $mod+Control+Up     move up
bindsym $mod+Control+Right  move right

# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move focused container to workspace
bindsym $mod+Control+1 move container to workspace number 1; \
	workspace number 1
bindsym $mod+Control+2 move container to workspace number 2; \
	workspace number 2
bindsym $mod+Control+3 move container to workspace number 3; \
	workspace number 3
bindsym $mod+Control+4 move container to workspace number 4; \
	workspace number 4
bindsym $mod+Control+5 move container to workspace number 5; \
	workspace number 5
bindsym $mod+Control+6 move container to workspace number 6; \
	workspace number 6
bindsym $mod+Control+7 move container to workspace number 7; \
	workspace number 7
bindsym $mod+Control+8 move container to workspace number 8; \
	workspace number 8
bindsym $mod+Control+9 move container to workspace number 9; \
    workspace number 9
bindsym $mod+Control+0 move container to workspace number 10; \
    workspace number 10 
## }}}

## Layout stuff {{{

# Create new split
bindsym $mod+g splith
bindsym $mod+v splitv

# Switch layout of current container
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Move focus to the parent/child container
bindsym $mod+a focus parent
bindsym $mod+c focus child
# }}}

# Resize mode {{{
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym $left  resize shrink width  10px
    bindsym $down  resize grow   height 10px
    bindsym $up    resize shrink height 10px
    bindsym $right resize grow   width  10px
    bindsym Left   resize shrink width  10px
    bindsym Down   resize grow   height 10px
    bindsym Up     resize shrink height 10px
    bindsym Right  resize grow   width  10px

    # Resize in bigger steps
    bindsym Shift+$left  resize shrink width  40px
    bindsym Shift+$down  resize grow   height 40px
    bindsym Shift+$up    resize shrink height 40px
    bindsym Shift+$right resize grow   width  40px
    bindsym Shift+Left   resize shrink width  40px
    bindsym Shift+Down   resize grow   height 40px
    bindsym Shift+Up     resize shrink height 40px
    bindsym Shift+Right  resize grow   width  40px

    # Move around while resizing
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
    bindsym Control+bracketleft mode "default"
}
# }}}

# Powermenu mode {{{
bindsym $mod+Control+q mode "powermenu"
mode "powermenu" {
    # Poweroff
    bindsym p exec systemctl poweroff 

    # Reboot
    bindsym r exec systemctl reboot

    # Lock screen
    #i3-change-next-to: bindsym l mode "default"; exec $lock
    bindsym l mode "default"; exec wlock

    # Suspend
    bindsym s mode "default"; exec --no-startup-id systemctl suspend

    # Exit sway/logout
    #i3-change-next-to: bindsym e mode "default"; exit
    bindsym e mode "default"; exec swaymsg exit
    #bindsym e exec loginctl terminate-user $USER

    # Return to default mode
    bindsym Escape              mode "default"
    bindsym $mod+Control+q      mode "default"
    bindsym Control+bracketleft mode "default"
}
# }}}

# Swap mode {{{
bindsym $mod+Return mark --add _swap; mode "swap"
mode "swap" {
    # Move the focus
    bindsym $left  focus left
    bindsym $down  focus down
    bindsym $up    focus up
    bindsym $right focus right
    bindsym Left   focus left
    bindsym Down   focus down
    bindsym Up     focus up
    bindsym Right  focus right
    bindsym a      focus parent
    bindsym c      focus child

    # Swap with marked window
    bindsym Return mode "default"; \
    swap container with mark _swap; \
    [con_mark="_swap"] focus

    # Return to default mode
    bindsym $mod+Return         mode "default"
    bindsym Escape              mode "default"
    bindsym Control+bracketleft mode "default"
}
# }}}
# }}}

