### Variables {{{
set $mod Mod4
set $left  h
set $down  j
set $up    k
set $right l

set $term kitty-with-socket
#sway-only(
set $menu rofi -show combi -run-command "swaymsg exec -- {cmd}" \
    -combi-modi "sway,drun" \
    -dpi "$ROFI_DPI"
#)
#i3: set $menu "rofi -show combi -combi-modi 'window\,drun' -dpi $ROFI_DPI"
# }}}

### Appearance {{{
font Fira Sans Regular 9 #sway-only
#i3: font pango:Fira Sans Regular 9
#i3: exec_always --no-startup-id feh --no-fehbg --bg-scale ~/Wallpaper/current

hide_edge_borders --i3 smart_no_gaps #sway-only
#i3: hide_edge_borders smart_no_gaps
default_border pixel 1

set $gaps_inner 15
set $gaps_outer 0

smart_gaps yes
gaps inner $gaps_inner
gaps outer $gaps_outer

#sway-only(
bar swaybar_command waybar
#)
#i3: exec --no-startup-id polybar --reload mybar

# Load colors
#sway-only(
include ~/.config/sway/flavours
#)
