set $mod Mod4
set $left  h
set $down  j
set $up    k
set $right l

# terminal emulator
set $term kitty-with-socket
set $term_var kitty-tmux

# set gaps
set $gaps_inner 15
set $gaps_outer 0

# web browser
set $browser qutebrowser

# application launcher
#i3-change-next-to: set $menu "rofi -show combi -combi-modi 'window\,drun' -dpi $ROFI_DPI"
set $menu rofi -show combi -run-command "swaymsg exec -- {cmd}" -combi-modi "sway,drun"

