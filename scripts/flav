#!/usr/bin/bash

CONFIG_DIR=~/.config/flavours
CONFIG_HEADER="WARNING: This file is automatically generated. Do not change it directly"

# generate config
cat <(echo "$CONFIG_HEADER") \
    <(echo) \
    "$CONFIG_DIR"/config.toml.d/* \
    > "$CONFIG_DIR/config.toml" 2> /dev/null

~/.cargo/bin/flavours "$@"
