PATH="$PATH:$HOME/.local/bin:$HOME/.node_modules/bin:$HOME/.cargo/bin"
export EDITOR=nvim
export VISUAL=nvim

if [ -x /usr/bin/fish ]; then
    alias tmux='SHELL=/usr/bin/fish tmux'
fi

if [ -d ~/.profile.d ]; then
    for file in ~/.profile.d/*; do
        source "$file" 2> /dev/null
    done
fi

# vim: filetype=sh
