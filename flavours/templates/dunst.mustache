[global]
    follow = keyboard
    geometry = "250x5-10+10"

    indicate_hidden = yes

    padding = 10
    horizontal_padding = 10

    frame_width = 1
    frame_color = #{{base01-hex}}

    separator_color = frame

    idle_threshold = 120

    font = Fira Sans Regular 10

    markup = full

    format = "<b>%s</b>\n%b"

    show_age_threshold = 60

    word_wrap = yes

    icon_position = left

    dmenu = /usr/bin/rofi -dmenu -p dunst:

    browser = /usr/bin/qutebrowser

    corner_radius = 8

    layer = top

    mouse_left_click = do_action, close_current
    mouse_middle_click = close_all
    mouse_right_click = close_current

[urgency_low]
    highlight = "#{{base05-hex}}"
    foreground = "#{{base05-hex}}"
    background = "#{{base00-hex}}"
    frame_color = "#{{base0B-hex}}"
    timeout = 10

[urgency_normal]
    highlight = "#{{base05-hex}}"
    foreground = "#{{base05-hex}}"
    background = "#{{base00-hex}}"
    frame_color = "#{{base0C-hex}}"
    timeout = 10

[urgency_critical]
    highlight = "#{{base07-hex}}"
    foreground = "#{{base07-hex}}"
    background = "#{{base00-hex}}"
    frame_color = "#{{base08-hex}}"
    frame_width = 2
    timeout = 0
