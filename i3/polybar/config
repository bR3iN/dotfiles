include-file = ~/.config/polybar/flavours


[bar/mybar]
enable-ipc = true
width = 100%
height = 25
fixed-center = true
dpi = ${xrdb:Xft.dpi:96}

background = ${colors.base00}
foreground = ${colors.base04}

line-size = 2

border-size = 0
border-color = ${colors.base01}

font-0 = Fira Sans:size=10;2
font-1 = Symbols Nerd Font:size=10;2
font-2 = Fira Sans:style=SemiBold:size=12;3

modules-left = i3
modules-center = date
modules-right = vpn backlight pulseaudio cpu memory idle network battery

cursor-click = pointer


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-padding = 3

pin-workspaces = true

label-mode = %mode%
label-mode-padding = 3
label-mode-foreground = ${colors.base02}
label-mode-underline= ${colors.base00}
label-mode-background = ${colors.base0B}

label-focused = %index%
label-focused-background = ${colors.base03}
label-focused-foreground = ${colors.base04}
label-focused-underline= ${colors.base0B}
label-focused-padding = ${self.label-padding}

label-unfocused = %index%
label-unfocused-padding = ${self.label-padding}
label-unfocused-background = ${colors.base01}
label-unfocused-foreground = ${colors.base04}
label-unfocused-underline= ${colors.base03}

label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-padding}

label-urgent = %index%
label-urgent-background = ${colors.base09}
label-urgent-padding = ${self.label-padding}


[indicator]
interval = 2
format-padding = 4
format-underline= ${colors.base03}


[module/vpn]
inherit = indicator
format-underline= ${colors.base0A}
type = custom/script
exec = echo "on"
exec-if = pgrep -x openvpn
; format-font = 3
format-padding = 2
format = "嬨"


[module/backlight]
inherit = indicator
type = internal/backlight
format-underline = ${colors.base08}

card = intel_backlight
enable-scroll = true

format = <label> <ramp>
ramp-0 = 
ramp-1 = 
ramp-2 = 


[module/pulseaudio]
type = internal/pulseaudio
inherit = indicator
click-right = pavucontrol

format-volume-background = ${self.format-muted-underline}
format-volume-foreground = ${colors.base00}
format-volume-underline = ${self.format-mouted-underline}

format-volume-padding = ${indicator.format-padding}
format-muted-padding = ${indicator.format-padding}
format-muted-underline = ${colors.base09}

format-volume = <label-volume> <ramp-volume>
label-volume = %percentage%%

label-muted = %percentage%% 婢

ramp-volume-0 = 奄
ramp-volume-1 = 奔
ramp-volume-2 = 墳


[module/network]
inherit = indicator
type = internal/network
interface = wlp4s0

format-connected-underline = ${colors.base0C}
format-disconnected-underline = ${self.format-connected-underline}
format-connected-padding = ${indicator.format-padding}
format-disconnected-padding = ${indicator.format-padding}
format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = ""
label-disconnected = ""


[module/idle]
inherit = indicator
format-underline= ${colors.base0D}
type = custom/script
exec = if [ -f /tmp/idle.lock ]; then echo ; else echo ; fi


[module/memory]
type = internal/memory
inherit = indicator

format-underline = ${colors.base0E}
label = %gb_used:0:3%GiB 


[module/cpu]
type = internal/cpu
inherit = indicator

format-underline = ${colors.base0A}
label = %percentage:02%% 


[module/date]
type = internal/date
inherit = indicator
interval = 5
format-underline = ${colors.base00}

date =
date-alt = "%d.%m.%Y - "

time = %H:%M
time-alt = %H:%M

label = %date%%time%
label-font = 3


[module/battery]
type = internal/battery
inherit = indicator
battery = BAT0
adapter = ADP1
full-at = 98

format-charging-padding = ${indicator.format-padding}
format-discharging-padding = ${indicator.format-padding}

format-charging = <label-charging> <animation-charging>
format-charging-underline = ${colors.base0B}

format-discharging = <label-discharging> <ramp-capacity>
format-discharging-underline = ${self.format-charging-underline}

ramp-capacity-0 =  ""
ramp-capacity-1 =  ""
ramp-capacity-2 =  ""
ramp-capacity-3 =  ""
ramp-capacity-4 =  ""
ramp-capacity-5 =  ""
ramp-capacity-6 =  ""
ramp-capacity-7 =  ""
ramp-capacity-8 =  ""
ramp-capacity-9 =  ""
ramp-capacity-10 = ""

animation-charging-0 = 

